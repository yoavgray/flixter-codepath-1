<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:paddingBottom="8dp"
    >

    <ImageView
        android:id="@+id/image_view_movie"
        android:layout_width="@dimen/image_view_movie_width_landscape"
        android:layout_height="@dimen/image_view_movie_height_landscape" />
    <TextView
        android:id="@+id/text_view_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_view_movie_title_size"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/text_view_movie_title_margin"
        android:layout_alignTop="@id/image_view_movie"
        android:layout_toEndOf="@id/image_view_movie"/>
    <TextView
        android:id="@+id/text_view_movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_view_movie_overview_size"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/text_view_movie_overview_margin"
        android:layout_below="@id/text_view_movie_title"
        android:layout_toEndOf="@id/image_view_movie"
        android:textColor="@android:color/white"
        />
</RelativeLayout>