<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/image_view_movie"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_view_movie_height_portrait" />
    <TextView
        android:id="@+id/text_view_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_view_movie_title_size"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowDx="5"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:layout_margin="@dimen/text_view_movie_title_margin"
        android:layout_alignTop="@id/image_view_movie"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/text_view_movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_background"
        android:textSize="@dimen/text_view_movie_overview_size"
        android:padding="8dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_below="@id/image_view_movie"
        android:textColor="@android:color/white"
        />
</RelativeLayout>