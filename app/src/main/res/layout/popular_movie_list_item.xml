<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_popular_movie"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_view_movie_height_landscape"/>

    <ImageView
        android:src="@drawable/play"
        android:id="@+id/image_view_play"
        android:layout_width="@dimen/image_view_play_size"
        android:layout_height="@dimen/image_view_play_size"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>